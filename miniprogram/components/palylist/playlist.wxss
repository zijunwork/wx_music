.play-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 224rpx;
  height: 284rpx;
  margin-top: 20rpx;
  position: relative;
}
.play-item .item-img {
  display: flex;
  width: 224rpx;
  height: 224rpx;
  flex-shrink: 0;
}
.play-item .play-title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 24rpx;
  line-height: 30rpx;
}
.play-item .play-count {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 12rpx;
  width: 148rpx;
  height: 36rpx;
  background: linear-gradient(to right, rgba(255, 255, 255, 0), rgba(0, 0, 0, .4));
}
.play-item .play-count .item-tag {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
.play-item .play-count .item-count {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #FFFFFF;
}